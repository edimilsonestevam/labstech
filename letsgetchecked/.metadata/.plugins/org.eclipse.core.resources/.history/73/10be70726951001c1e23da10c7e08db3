package pt.po.edimilsonestevam.page;

import org.junit.Assert;
import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.support.ui.ExpectedConditions;
import org.openqa.selenium.support.ui.WebDriverWait;

import pt.po.edimilsonestevam.setup.Base;

public class Search extends Base{

	public Search(WebDriver browser) {
		super(browser);
		
	}

	public void VerifyActualPage(String expectedUrl) {
		
		System.out.println("• Verifying Actual Page...");
		
		String actualUrl = (String) browser.getCurrentUrl();
		Assert.assertEquals("Verify if you are in Google Maps", expectedUrl, actualUrl);

	}
	
	public void SearchCity(String cityName) {
		
		System.out.println("• Typing City...");
		
		String iconeLupa = "button[class=\"btn btn-search\"]"; //ELEMENTO TRATADO
		String searchType = " ";
		
		WebElement element;
		WebDriverWait wait = new WebDriverWait(browser, 12);
		element = wait.until(ExpectedConditions.elementToBeClickable(By.cssSelector(iconeLupa)));
		element.click();
		
		element.findElement(By.xpath(campoPesquisa)).sendKeys(cityName);
	
	}
	
}
